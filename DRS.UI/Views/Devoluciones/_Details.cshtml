                                                                        <td>@item.Id</td>
                                                                        <td>
                                                                            @item.Producto
                                                                        </td>
                                                                        <td>@item.Cantidad</td>
                                                                        <td>
                                                                            @if (string.IsNullOrEmpty(item.Serie))
                                                                            {
                                                                                <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                @item.Serie
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            @if (item.EsSoloDevolucion == true)
                                                                            {
                                                                                <i class="fa fa-check center" aria-hidden="true"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            @if (item.ExisteProducto == false)
                                                                            {
                                                                                <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                            }
                                                                            else
