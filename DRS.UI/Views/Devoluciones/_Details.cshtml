                                                                    <th>Serie</th>
                                                                    <th>Cantidad</th>
                                                                    <th>Cantidad reportada</th>
                                                                    <th>Cantidad por reportar</th>
                                                                    <th>Último comentario</th>
                                                                    <th>Estatus</th>
                                                                    <th>Opciones</th>
                                                                </tr>
                                                            </thead>
