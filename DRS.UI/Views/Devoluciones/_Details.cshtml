                                                                            @if (string.IsNullOrEmpty(item.Serie))
                                                                            {
                                                                                <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                @item.Serie
                                                                            }
                                                                        </td>
                                                                        <td>@item.Cantidad</td>
                                                                        <td>
                                                                            @if (string.IsNullOrEmpty(item.DetailsReservationStock.lastquantityreported))
                                                                            {
                                                                                <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                if(item.DetailsReservationStock.lastquantityreported == "0")
                                                                                {
                                                                                    <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                                }
                                                                                else
                                                                                {
                                                                                    @item.DetailsReservationStock.lastquantityreported
                                                                                }
                                                
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            @item.QuantityRestante
                                                                        </td>
                                                                        <td>
                                                                            @if (string.IsNullOrEmpty(item.DetailsReservationStock.lastcommentreported))
                                                                            {
                                                                                <i class="fa fa-close center" style="color: red;" aria-hidden="true"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                @item.DetailsReservationStock.lastcommentreported
                                                                            }

                                                                        </td>
                                                                        <td>
                                                                            @item.DetailsReservationStock.status
                                                                        </td>
                                                                        <td>
                                            
                                                                            @if(item.StockConfirmation.StatusId != 0)
                                                                            {
                                                                                <button type="button" id="btnSee" class="btn btn-outline-info btn-rounded btn-sm btnDetailsStock" onclick="CheckProductHistorial(@item.IdDetallesDevolucion)" data-toggle="tooltip" data-placement="top" title="Ver historial de confirmaciones o rechazos del producto">
                                                                                    <i class="fa fa-eye"></i>
                                                                                </button>
                                                                            }

                                                                        </td>

                                                                    </tr>
                                                                }


                                                            </tbody>

                                                        </table>
                                                    }
                                                </div>
                                            </div>

                                        </div>


                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <div class="row" id="footerBtns">

            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div class="pull-right">
                    <button type="button" style="margin-right: 5px !important;" class="btn btn-danger btn-sm" id="btnCloseModify" data-dismiss="modal"><i class="fa fa-close"></i>  Cerrar</button>
                </div>
            </div>

        </div>
    </div>
}



